<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".presentation.ui.SplashFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgSplashLogo"
        android:layout_width="@dimen/space_140"
        android:layout_height="@dimen/space_140"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sketchwhite" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSplashName"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:text="@string/furniture_store"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/size_20"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgSplashLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>