<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_120"
    android:layout_marginBottom="@dimen/space_15">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="@dimen/space_0"
        android:layout_height="@dimen/space_0"
        android:layout_margin="@dimen/space_5"
        app:cardCornerRadius="@dimen/space_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgProductItem"
            android:layout_width="@dimen/space_80"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_5"
            android:padding="@dimen/space_10"
            tools:src="@drawable/ic_launcher_background" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_90"
            android:layout_marginTop="@dimen/space_10"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTypeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_90"
            android:layout_marginTop="@dimen/space_25"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDescriptionItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_90"
            android:layout_marginTop="@dimen/space_50"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/app_name"
            android:textSize="@dimen/size_12" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnRemoveItem"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_gravity="end"
            android:layout_margin="@dimen/space_10"
            app:srcCompat="@drawable/ic_close" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPriceItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/space_90"
            android:layout_marginBottom="@dimen/space_5"
            android:text="@string/price_"
            android:textColor="@color/main"
            android:textSize="@dimen/size_10" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgStar"
            android:layout_width="@dimen/space_15"
            android:layout_height="@dimen/space_15"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/space_140"
            android:layout_marginBottom="@dimen/space_5"
            android:tint="@color/main"
            app:srcCompat="@drawable/ic_star" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvStarCountItem"
            android:layout_width="@dimen/space_15"
            android:layout_height="@dimen/space_15"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/space_160"
            android:layout_marginBottom="@dimen/space_5"
            android:gravity="center"
            android:text="@string/_4_8"
            android:textSize="@dimen/size_8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnAdd"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/space_25"
            android:layout_marginBottom="@dimen/space_5"
            android:background="@drawable/btn_back"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvCount"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/space_50"
            android:layout_marginBottom="@dimen/space_5"
            android:gravity="center"
            android:text="@string/_0"
            android:textSize="@dimen/size_12"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/btnRemove"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/space_75"
            android:layout_marginBottom="@dimen/space_5"
            android:background="@drawable/btn_back"
            android:gravity="center"
            android:text="@string/remove"
            android:textColor="@color/white"
            android:textSize="@dimen/size_12"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>